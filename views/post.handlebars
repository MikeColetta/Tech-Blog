<div class="container">
  <div class="card blog-card mb-3">
    <h5 class="card-header bg-dark">
      <a class="blog-title" href="/post/{{id}}">{{title}}</a>
      <p class="blog-author">Created by {{user.name}} on {{format_date date_created}}</p>
    </h5>
    <p>{{body}}</p>
  </div>
  <br>
  {{#if comment.length}}
  {{#each Comments as |comment|}}
  <div class="card blog-card mb-3">
    <h5 class="card-header bg-dark">
      <a class="blog-title" href="/post/{{comment.id}}">{{comment.id}}</a>
      <p class="blog-author">Created by {{comment.user.name}} on {{format_date date_created}}</p>
    </h5>
    <p>{{comment.body}}</p>
  </div>
  {{/each}}
  {{/if}}
  <div class="input-group new-comment-form">
    <div class="input-group-prepend new-comment-form">
      <span class="input-group-text new-comment-form bg-dark comment-text">Add a comment:</span>
    </div>
    <textarea class="form-control" id="comment-body"></textarea>
    <br>
    <br>
    <div class="input-group new-comment-form">
      <button type="submit" class="btn btn-secondary mt-2" id="submit-comment">Post Comment!</button>
    </div>
  </div>
</div>

<script src="../js/post.js"></script>