<main>
    <div class="container">
    <div class="row">
      <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
      </div>
    </div>
    <br>
    {{#if posts.length}}
    <div class="row">
      <div class="col-md-6 post-list">
        <h3>Your Posts:</h3>
        {{#each posts as |post|})
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>
    <div class="row mt-4">
      <div class="col-md-6">
        <h3>Create a New Blog Post:</h3>
        <form class="form new-post-form">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Title:</span>
            </div>
            <input type="text" class="form-control" id="post-title">
          </div>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Post:<Body></Body></span>
            </div>
            <textarea class="form-control" id="post-body"></textarea>
          </div>
          <br>
          <div class="form-group">
            <button type="submit" class="btn btn-secondary">Create</button>
          </div>
        </form>
      </div>
    </div>
</main>